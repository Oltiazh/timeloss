{
  "manifest_version": 3,
  "name": "TimeLoss",
  "description": "Time tracker for social media",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "idle",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "notifications"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  }
}
